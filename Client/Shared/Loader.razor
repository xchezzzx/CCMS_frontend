<div class="text-center">
	@switch (Size)
	{
		case ("S"):
		<img src="./images/loading-waiting.gif" width="100"/>
		break;

		case ("M"):
		<img src="./images/loading-waiting.gif" width="200"/>
		break;

		case ("L"):
			<img src="./images/loading-waiting.gif" />
		break;
	}
</div>


@code {
	[Parameter]
	public string Size { get; set; }
}
